set -e

# Avoid trouble with weird bytes on non-C locales
export LC_ALL=C

READTAGS=${1:-./readtags}
UNITS=${2:-./Units}
s=0

if ! [ -f "${READTAGS}" ]; then
    echo "No such file: ${READTAGS}" 1>&2
    exit 1
fi

if ! [ -x "${READTAGS}" ]; then
    echo "Not an executable: ${READTAGS}" 1>&2
    exit 1
fi

if ! [ -x "${UNITS}" ]; then
    echo "Not such directory: ${UNITS}" 1>&2
    exit 1
fi


# Expand CTags escape sequences (and keep the original, too)
# See docs/format.rst
expandEscapeSequences()
{
    local original
    local expanded

    read -r original
    expanded="$(
	echo "$original" |
	sed 's/\\\\/\\/g' |
	sed 's/\\t/\t/g' |
	sed 's/\\r/\r/g' |
	sed 's/\\n/\n/g' |
	sed 's/\\a/\a/g' |
	sed 's/\\b/\b/g' |
	sed 's/\\v/\v/g' |
	sed 's/\\f/\f/g' |
	sed 's/\\x21/!/g' |
	sed 's/\\x20/ /g'
    )"

    if [ "$expanded" != "$original" ]; then
	echo "$expanded"
    fi
    echo "$original"
}

# disable path expansion, because we don't need it and it's applied on the
# result of the commands used to loop on, and we don't want that.
set -f
# remove space from IFS as it's valid in tag names
OLD_IFS="$IFS"
IFS='
'

tagfiles=$(find "$UNITS" -name expected.tags)
for tags in $tagfiles; do
    tagnames=$(sed -e 's/^\([^	]*\)	.*/\1/' "$tags" | expandEscapeSequences)
    for name in $tagnames; do
	if [ 1 -gt $("${READTAGS}" -t "$tags" - "$name" | wc -l) ]; then
	    printf 'FAILED: "%s" -t "%s" - "%s"\n' "${READTAGS}" "$tags" "$name"
	    s=1
	fi
    done
done

IFS="$OLD_IFS"

exit $s
