#!/bin/sh

# dist-docs --- Generate list of EXTRA_DIST for docs directory
#
# COPYRIGHT NOTICE SHOULD BE HERE
#

print_make_header()
{
    echo "# -*- makefile -*-"
    echo "# Generated by $0"
    echo
}

make_with_git ()
{
    git_top=$1
    sub_f=

    print_make_header

    for sub_f in $(git ls-files ${git_top}); do
	echo "EXTRA_DIST +=" "${sub_f}"
    done
}

make_with_git docs > makefiles/docs.mak
